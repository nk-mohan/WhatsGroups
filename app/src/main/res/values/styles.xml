<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextSubTitle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="font_name">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextSubDescription">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="font_name">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="StatusTabLayoutTextAppearance">
        <item name="tabIndicatorColor">@color/purple_200</item>
        <item name="tabIndicatorHeight">@dimen/dimen_3</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/purple_200</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceTab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TabTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

</resources>